<!-- =============================================================== -->
<!-- Define the build artifacts (created/used by projects) here      -->
<!--                                                                 -->
<!-- NOTE:  These should be all of the files necessary to "depend" on-->
<!-- the project (not just the built files).  Make a separate        -->
<!-- artifact for groups of files that will probably be copied to    -->
<!-- separate directoris (e.g. jars and conf files)                  -->
<!-- =============================================================== -->
<project name="c3pr-2.0-artifacts" basedir=".">

    <target name="defineArtifacts" description="Defines artifacts that can be imported into projects.">

        <!-- =============== -->
        <!-- share artifacts -->
        <!-- =============== -->
        <artifact track="main" type="jars" id="collections-generic">
            <fileset dir="${share.dir}/collections-generic">
                <include name="*.jar"/>
            </fileset>
        </artifact>

        <artifact track="main" type="jars" id="acegi.jars">
            <fileset dir="${share.dir}/spring-2.0/acegi">
                <include name="*.jar"/>
            </fileset>
        </artifact>

        <artifact track="main" type="jars" id="activemq.jars">
            <fileset dir="${share.dir}/activemq">
                <include name="*.jar"/>
            </fileset>
        </artifact>

        <!--Libs are in a compile track. Only needed to run db scripts.
            But jars conflict with runtime jars-->
        <artifact track="compile" type="jars" id="bering.jars">
            <fileset dir="${share.dir}/bering">
                <include name="*.jar"/>

            </fileset>
        </artifact>

        <artifact track="test" type="jars" id="common.test.jars">
            <fileset dir="${junit.dir}">
                <include name="jdepend*.jar"/>
                <include name="junit*.jar"/>
                <include name="xmlunit*.jar"/>
            </fileset>
            <fileset dir="${share.dir}/spring-2.0/testing">
                <include name="*.jar"/>
            </fileset>
        </artifact>

        <artifact track="main" type="jars" id="cacore.jars">
            <fileset dir="${share.dir}/cacore">
                <include name="*.jar"/>
            </fileset>
        </artifact>

        <artifact track="main" type="jars" id="csm.jars">
            <fileset dir="${share.dir}/cacore/csm">
                <include name="*.jar"/>
            </fileset>
        </artifact>


        <artifact track="main" type="jars" id="globus.jars">
            <fileset dir="${share.dir}/globus/lib">
                <include name="*.jar"/>
            </fileset>
        </artifact>

        <artifact track="main" type="jars" id="globus.security.jars">
            <fileset dir="${share.dir}/globus/security/lib">
                <include name="*.jar"/>
            </fileset>
        </artifact>

        <artifact track="main" type="jars" id="cagrid.jars">
            <fileset dir="${share.dir}/cagrid/lib">
                <include name="*.jar"/>
            </fileset>
        </artifact>

        <artifact track="main" type="jars" id="ant-contrib.jars">
            <fileset dir="${share.dir}/ant-contrib">
                <include name="*.jar"/>
            </fileset>
        </artifact>

        <artifact track="main" type="jars" id="ehcache.jars">
            <fileset dir="${share.dir}/ehcache">
                <include name="*.jar"/>
            </fileset>
        </artifact>

        <artifact track="main" type="jars" id="spring.jars">
            <fileset dir="${share.dir}/spring-2.0">
                <include name="*.jar"/>
            </fileset>
        </artifact>

        <artifact track="main" type="jars" id="hibernate.jars">
            <fileset dir="${share.dir}/hibernate-3.2.1">
                <include name="*.jar"/>
            </fileset>
        </artifact>

        <artifact track="main" type="jars" id="junit.jars">
            <fileset dir="${share.dir}/junit-3.8.1">
                <include name="*.jar"/>
            </fileset>
        </artifact>

        <artifact track="main" type="jars" id="log4j.jars">
            <fileset dir="${share.dir}/log4j-1.2.13">
                <include name="*.jar"/>
            </fileset>
        </artifact>

        <artifact track="main" type="jars" id="commons-io.jars">
            <fileset dir="${share.dir}/commons-io">
                <include name="*.jar"/>
            </fileset>
        </artifact>

        <artifact track="main" type="jars" id="commons-logging.jars">
            <fileset dir="${share.dir}/commons-logging">
                <include name="*.jar"/>
            </fileset>
        </artifact>

        <artifact track="main" type="jars" id="commons-validator.jars">
            <fileset dir="${share.dir}/commons-validator">
                <include name="*.jar"/>
            </fileset>
        </artifact>

        <!--jars from the ctms commons project-->
        <artifact track="main" type="jars" id="ctms-commons.jars">
            <fileset dir="${share.dir}/ctms-commons">
                <include name="ctms-commons-*.jar"/>
                <include name="aspectj*.jar"/>
                <include name="acegi-csm*.jar"/>
            </fileset>
        </artifact>

        <artifact track="main" type="jars" id="antlr.jars">
            <fileset dir="${share.dir}/antlr-2.7.6">
                <include name="*.jar"/>
            </fileset>
        </artifact>

        <artifact track="main" type="jars" id="dom4j.jars">
            <fileset dir="${share.dir}/dom4j-1.6.1">
                <include name="*.jar"/>
            </fileset>
        </artifact>

        <artifact track="main" type="jars" id="jdom.jars">
            <fileset dir="${share.dir}/jdom">
                <include name="*.jar"/>
            </fileset>
        </artifact>


        <artifact track="main" type="jars" id="xerces.jars">
            <fileset dir="${share.dir}/xerces-2.6.2">
                <include name="*.jar"/>
            </fileset>
        </artifact>


        <artifact track="main" type="jars" id="xercesImpl.jars">
            <fileset dir="${share.dir}/xercesImpl">
                <include name="*.jar"/>
            </fileset>
        </artifact>

        <artifact track="main" type="jars" id="jboss-j2ee.jars">
            <fileset dir="${share.dir}/jboss-j2ee-4.0.5">
                <include name="*.jar"/>
            </fileset>
        </artifact>

        <artifact track="main" type="jars" id="net-handle.jars">
            <fileset dir="${share.dir}/net-handle">
                <include name="*.jar"/>
            </fileset>
        </artifact>

        <artifact track="main" type="jars" id="security.lib.jars">
            <fileset dir="${share.dir}/security/lib">
                <include name="*.jar"/>
            </fileset>
        </artifact>

        <artifact track="main" type="jars" id="web-sso.jars">
            <fileset dir="${share.dir}/web-sso">
                <include name="*.jar"/>
            </fileset>
        </artifact>

        <artifact track="main" type="jars" id="extremeComponents.jars">
            <fileset dir="${share.dir}/extremeComponents">
                <include name="*.jar"/>
            </fileset>
        </artifact>

        <!-- ================= -->
        <!-- project artifacts -->
        <!-- ================= -->
        <artifact track="compile" type="jars" id="c3pr.management.jars">
            <fileset dir="${management.jar.dir}">
                <include name="*.jar"/>
            </fileset>
        </artifact>

        <artifact track="main" type="jars" id="c3pr.grid.jars">
            <antcall target="build-grid"/>
            <fileset dir="${projects.dir}/grid/RegistrationConsumer/build/lib">
                <include name="*.jar"/>
                <exclude name="*-test*.jar"/>
                <exclude name="*-service*.jar"/>
            </fileset>
        </artifact>

        <artifact track="main" type="jars" id="c3pr.core.jars">
            <antcall target="build-core"/>
            <fileset dir="${projects.dir}/core/build/jars">
                <include name="*.jar"/>
                <exclude name="*-tests*.jar"/>
            </fileset>
        </artifact>

        <artifact track="main" type="jars" id="c3pr.core.lib.jars">
            <fileset dir="${projects.dir}/core/lib">
                <include name="*.jar"/>
            </fileset>
            <fileset dir="${projects.dir}/core/ext/lib">
                <include name="*.jar"/>
            </fileset>
        </artifact>

        <artifact track="test" type="jars" id="c3pr.core.test.jars">
            <antcall target="build-core"/>
            <fileset dir="${projects.dir}/core/build/jars">
                <include name="*-tests*.jar"/>
            </fileset>
            <fileset dir="${projects.dir}/core/test/lib">
                <include name="*.jar"/>
            </fileset>
        </artifact>

        <artifact track="main" type="jars" id="c3pr.web.jars">
            <antcall target="build-web"/>
            <fileset dir="${projects.dir}/web/build/jars">
                <include name="*.jar"/>
                <exclude name="*test*.jar"/>
            </fileset>
            <!--
                        <fileset dir="${projects.dir}/web/lib">
                            <include name="*.jar"/>
                         </fileset>
            -->
        </artifact>

        <artifact track="main" type="jars" id="c3pr.esb-client.jars">
            <antcall target="build-esb-client"/>
            <fileset dir="${projects.dir}/esb-client/build/jars">
                <include name="*.jar"/>
                <exclude name="*test*.jar"/>
            </fileset>
            <fileset dir="${projects.dir}/esb-client/ext/lib">
                <include name="*.jar"/>
            </fileset>
            <fileset dir="${projects.dir}/esb-client/lib">
                <include name="*.jar"/>
            </fileset>
        </artifact>

        <artifact track="main" type="jars" id="c3pr.test-system.jars">
            <antcall target="build-test-system"/>
            <fileset dir="${projects.dir}/test-system/build/jars">
                <include name="*.jar"/>
                <exclude name="*test*.jar"/>
            </fileset>
        </artifact>

        <artifact track="main" type="resources" id="c3pr.build.properties">
            <fileset dir="${antfiles.dir}">
                <include name="build.properties"/>
            </fileset>
        </artifact>

    </target>

</project>