<project name="c3pr-registration-consumer-impl" basedir=".">

    <property environment="env"/>
    <property name="project.name" value="c3pr-registration-consumer-impl"/>
    <property name="src.dir" value="${basedir}/src/java"/>
    <property name="build.dir" value="${basedir}/build"/>
    <property name="build.classes.dir" value="${build.dir}/classes"/>

    <property name="lib.dir" value="${basedir}/lib"/>
    <property name="ext.lib.dir" value="${basedir}/ext/lib"></property>

    <property name="test.src.dir" value="${basedir}/test/${src.dir}"/>
    <property name="test.build.dir" value="${basedir}/test/${build.dir}"/>
    <property name="test.lib.dir" value="${basedir}/test/${lib.dir}"/>
    <property name="test.report.dir" value="${basedir}/test/report"/>
    <property name="build.jar.dir" value="${build.dir}/jars"/>
    <property name="jar.name" value="${build.jar.dir}/${project.name}.jar"/>

    <property name="deploy.lib.dir" value="${env.CATALINA_HOME}/webapps/wsrf/WEB-INF/lib"/>


    <target name="checkGlobus" depends="setGlobus">
        <condition property="globus.not.found">
            <or>
                <not>
                    <isset property="ext.globus.dir"/>
                </not>
                <equals arg1="${ext.globus.dir}" arg2=""/>
            </or>
        </condition>
        <fail message="Globus installation is not set in either GLOBUS_LOCATION or ext.globus.dir"
              if="globus.not.found"/>
        <echo message="Globus: ${ext.globus.dir}"/>
    </target>

    <target name="setGlobus" if="env.GLOBUS_LOCATION">
        <property name="ext.globus.dir" value="${env.GLOBUS_LOCATION}"/>
    </target>

    <target name="defineClasspaths">
        <path id="compile.cp">
            <fileset dir="${lib.dir}">
                <include name="*.jar"/>
            </fileset>
            <fileset dir="${ext.globus.dir}/lib">
                <include name="*.jar"/>
            </fileset>
            <fileset dir="${ext.lib.dir}">
                <include name="*.jar"/>
            </fileset>
        </path>

        <path id="test.compile.cp">
            <pathelement location="test/resources"/>
            <path refid="compile.cp"/>
            <fileset dir="${test.lib.dir}">
                <include name="*.jar"/>
            </fileset>
            <fileset dir="${ext.globus.dir}/lib">
                <include name="*.jar"/>
            </fileset>
            <pathelement location="${build.classes.dir}"/>
        </path>

        <path id="test.run.cp">
            <path refid="test.compile.cp"/>
            <pathelement location="${test.build.dir}"/>
        </path>
    </target>

    <target name="prepare">
        <mkdir dir="${build.dir}"/>
        <mkdir dir="${build.classes.dir}"/>
        <mkdir dir="${build.jar.dir}"/>
    </target>

    <target name="compile" depends="checkGlobus,defineClasspaths,prepare">

        <javac srcdir="${src.dir}" destdir="${build.classes.dir}" debug="true">
            <classpath refid="compile.cp"/>
        </javac>
        <copy todir="${build.classes.dir}">
            <fileset dir="${src.dir}">
                <exclude name="**/*.java"/>
            </fileset>
        </copy>
    </target>

    <target name="compileTests" depends="compile">
        <mkdir dir="${test.build.dir}"/>
        <javac srcdir="${test.src.dir}" destdir="${test.build.dir}" debug="true">
            <classpath refid="test.compile.cp"/>
        </javac>
    </target>

    <target name="jar" depends="compile">
        <mkdir dir="${build.jar.dir}"/>
        <jar basedir="${build.classes.dir}" destfile="${jar.name}"/>
    </target>

    <target name="deploy" depends="jar">
        <copy todir="${deploy.lib.dir}">
            <fileset dir="${build.jar.dir}">
                <include name="${jar.name}"/>
            </fileset>
        </copy>
    </target>

    <target name="clean">
        <delete dir="${build.dir}"/>

        <delete dir="${test.build.dir}"/>
    </target>

    <target name="all" depends="jar" description="Builds the project"/>

</project>
