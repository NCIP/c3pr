<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

   
    <!-- Redirect views -->
    <bean id="redirectToLogin" class="org.springframework.web.servlet.view.RedirectView">
        <property name="contextRelative"><value>true</value></property>
        <property name="url"><value>/public/login.htm</value></property>
    </bean>
    
    <bean id="redirectToConfiguration" class="org.springframework.web.servlet.view.RedirectView">
        <property name="contextRelative"><value>true</value></property>
        <property name="url"><value>/pages/admin/configure</value></property>
    </bean>
    
</beans>