<decorators defaultdir="/WEB-INF/decorators">
    <decorator name="standard" page="standard.jsp">
        <pattern>/pages/*</pattern>
        <pattern>/public/*</pattern>
        <pattern>/accessDenied.jsp</pattern>
        <pattern>/pages/registration/searchRegistration</pattern>
        <pattern>/pages/participant/searchParticipant</pattern>
        <pattern>/pages/registration/overview</pattern>
        <pattern>/pages/study/confirm</pattern>
    </decorator>
    <decorator name="tabbedflow" page="tabbedflow.jsp">
        <pattern>/pages/study/createStudy</pattern>
        <pattern>/pages/study/editStudy</pattern>
        <pattern>/pages/study/viewStudy</pattern>
        <pattern>/pages/participant/createParticipant</pattern>
        <pattern>/pages/participant/editParticipant</pattern>
        <pattern>/pages/registration/manageRegistration*</pattern>
    </decorator>
    <decorator name="registration" page="registrationflow.jsp">
        <pattern>/pages/registration/*</pattern>
    </decorator>
    <decorator name="standardContent" page="standardContent.jsp">
        <pattern>/pages/admin/createOrganization</pattern>
        <pattern>/pages/admin/searchOrganization</pattern>        
    </decorator>
    <decorator name="nullDecorator" page="nullDecorator.jsp">
    </decorator>
    <excludes>
        <pattern>/*/image/*</pattern>
        <pattern>/*/js/*</pattern>
        <pattern>/*/css/*</pattern>
        <pattern>/error.jsp</pattern>
        <pattern>/pages/registration/searchStudy</pattern>
        <pattern>/pages/registration/searchParticipant</pattern>
        <pattern>/pages/registration/searchEpoch*</pattern>
    </excludes>
</decorators>

