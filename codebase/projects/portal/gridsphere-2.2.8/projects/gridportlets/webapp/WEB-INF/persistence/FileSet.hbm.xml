<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class name="org.gridlab.gridsphere.services.file.impl.PersistedFileSet"
           table="fileSet" discriminator-value="FileSet">
        <!-- Object id -->
        <id
            name="oid"
            column="gsoid"
            type="java.lang.String"
            length="32"
            >
            <generator class="uuid.hex"/>
        </id>
 
        <discriminator column="subclass" type="string"/>

        <!-- Base file regular expression set -->
        <subclass name="org.gridlab.gridsphere.services.file.sets.impl.PersistedFilePatternSet"
                  discriminator-value="RegExFileSet">
            <!-- File location -->
            <property name="FileLocation"
                      column="FILE_LOC"
                      type="org.gridlab.gridsphere.services.file.impl.FileLocationUserType"/>

            <!-- Include patterns -->
            <list name="IncludePatterns"
                  table="FSET_INCS"
                  cascade="all">
                <key column="INC_ID"/>
                <index column="INC_NUM"/>
                <element column="FSET_INC" type="string" not-null="true"/>
            </list>
            <!-- Exclude pattern -->
            <list name="ExcludePatterns"
                  table="FSET_EXCS"
                  cascade="all">
                <key column="EXC_ID"/>
                <index column="EXC_NUM"/>
                <element column="FSET_EXC" type="string" not-null="true"/>
            </list>
        </subclass>

        <!-- Base file location set -->
        <subclass name="org.gridlab.gridsphere.services.file.sets.impl.PersistedFileLocationSet"
                 discriminator-value="FileLocationSet">
            <!-- File locations -->
            <list name="FileLocations"
                  table="FSET_LOCS"
                  cascade="all">
                <key column="LOC_ID"/>
                <index column="LOC_NUM"/>
                <element column="FSET_LOC"
                         type="org.gridlab.gridsphere.services.file.impl.FileLocationUserType"
                         not-null="true"/>

            </list>
        </subclass>
    </class>
</hibernate-mapping>
