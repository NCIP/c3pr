<?xml version="1.0" encoding="UTF-8"?>
<!--

    Authentication Modules

    This descriptor defines the authentication modules supported

    $Id: authmodules.xml,v 1.1.1.1 2007-02-01 20:42:46 kherm Exp $
-->

<auth-modules>

    <auth-module>
        <name>Grid Credential</name>
        <description>Credential authentication uses Myproxy server and user's credential to verify authentication</description>
        <implementation>org.gridlab.gridsphere.services.security.gss.CredentialAuthModule</implementation>
        <active>true</active>
        <priority>50</priority>
        <!-- set this to true if you want a default cred mapping created for a user if one does not exist -->
        <auth-config>
            <param-name>CREATE_DEFAULT_MAPPING</param-name>
            <param-value>true</param-value>
        </auth-config>
        <!-- set this to true if you want to create a password in the GS database
             using the supplied password if one does not exist -->
        <auth-config>
            <param-name>CREATE_GS_PASSWORD</param-name>
            <param-value>true</param-value>
        </auth-config>
    </auth-module>
    
    <auth-module>
        <name>LDAP Authentication Module</name>
        <description>LDAP authentication uses LDAP server to verify authentication</description>
        <implementation>org.gridlab.gridsphere.services.security.ldap.LDAPAuthModule</implementation>
        <active>false</active>
        <priority>70</priority>
        <auth-config>
            <param-name>LDAP_HOST</param-name>
            <param-value>ldap://n0.iit.bme.hu:389</param-value>
        </auth-config>
        <auth-config>
            <param-name>BASE_DN</param-name>
            <param-value>ou=People, dc=ikpc, dc=iit, dc=bme, dc=hu</param-value>
        </auth-config>
    </auth-module>

</auth-modules>
