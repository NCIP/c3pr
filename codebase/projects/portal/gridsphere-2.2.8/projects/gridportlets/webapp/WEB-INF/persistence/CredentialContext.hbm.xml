<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class name="org.gridlab.gridsphere.services.security.gss.impl.CredentialContextImpl"
           table="credentialContext"
           discriminator-value="CredentialContext">
        <!-- Object id -->
        <id name="oid"
            column="gsoid"
            type="java.lang.String"
            length="32"
            >
            <generator class="uuid.hex"/>

        </id>

        <discriminator column="subclass" type="string"/>

        <!-- User -->
        <property name="UserOid" type="string" column="useroid"/>

        <!-- Dn -->
        <property name="Dn" type="string" column="dn"/>

        <!-- Label -->
        <property name="Label" type="string" column="label"/>

        <!-- Time created -->
        <property name="TimeCreated" type="long" column="timecreated"/>

        <!-- Last updated -->
        <property name="TimeLastUpdated" type="long" column="lastupdated"/>

        <!-- Last activated -->
        <property name="TimeLastActivated" type="long" column="lastactivated"/>

   </class>
</hibernate-mapping>
