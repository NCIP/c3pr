<!DOCTYPE mapping PUBLIC "-//EXOLAB/Castor Object Mapping DTD Version 1.0//EN" "http://castor.exolab.org/mapping.dtd">
<mapping>

    <class name="org.gridlab.gridsphere.services.ui.resource.browser.ResourceProfileRegistry">
        <map-to xml="resource-profiles"/>
        <field name="ResourceProfileList" collection="arraylist"
               type="org.gridlab.gridsphere.services.ui.resource.browser.ResourceProfile">
            <bind-xml name="resource-profile"/>
        </field>
    </class>

    <class name="org.gridlab.gridsphere.services.ui.resource.browser.ResourceProfile">
        <field name="Order" type="int">
            <bind-xml name="order" node="attribute"/>
        </field>
        <field name="Key" type="string">
            <bind-xml name="key" node="attribute"/>
        </field>
        <field name="Description" type="string">
            <bind-xml name="description" node="attribute"/>
        </field>
        <field name="ResourceClassName" type="string">
            <bind-xml name="resource-type"/>
        </field>
        <field name="ResourceListViewClassName" type="string">
            <bind-xml name="resource-list-page"/>
        </field>
        <field name="ResourceViewClassName" type="string">
            <bind-xml name="resource-view-page"/>
        </field>
        <field name="ResourceEditClassNameList" collection="arraylist" type="string">
            <bind-xml name="resource-edit-page"/>
        </field>
        <field name="ProfileAttributes"
               type="org.gridlab.gridsphere.services.util.StringAttribute"
               collection="arraylist">
            <bind-xml name="profile-attribute"/>
        </field>
        <field name="RequiredResourceClassNameList" collection="arraylist" type="string">
            <bind-xml name="required-resource"/>
        </field>
    </class>

    <class name="org.gridlab.gridsphere.services.util.StringAttribute">
        <map-to xml="profile-attribute"/>
        <field name="Name" type="string">
            <bind-xml name="name" node="attribute"/>
        </field>
        <field name="Value" type="string">
            <bind-xml name="value" node="attribute"/>
        </field>
    </class>

</mapping>
