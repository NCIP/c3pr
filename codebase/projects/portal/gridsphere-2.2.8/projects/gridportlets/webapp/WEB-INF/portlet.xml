            <portlet-mode>help</portlet-mode>
        </supports>
        <supported-locale>en</supported-locale>
        <supported-locale>hr</supported-locale>
        <resource-bundle>FileActivityPortlet.Portlet</resource-bundle>
    </portlet>

    <portlet>
        <description xml:lang="en">File Browser Portlet</description>
        <description xml:lang="hr">Portlet Preglednik datoteka</description>
        <portlet-name>FileBrowserPortlet</portlet-name>
        <display-name xml:lang="en">File Browser Portlet</display-name>
        <display-name xml:lang="hr">Portlet Preglednik datoteka</display-name>
