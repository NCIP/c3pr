<?xml version="1.0" encoding="UTF-8"?>
<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd"
    version="1.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd">

    <portlet>
        <description xml:lang="en">Credential Manager Portlet</description>
        <description xml:lang="hr">Portlet Upravitelj certifikata</description>
        <portlet-name>CredentialManagerPortlet</portlet-name>
        <display-name xml:lang="en">Credential Manager Portlet</display-name>
        <display-name xml:lang="hr">Portlet Upravitelj certifikata</display-name>
        <portlet-class>org.gridlab.gridsphere.portlets.security.gss.CredentialManagerPortlet</portlet-class>
        <expiration-cache>0</expiration-cache>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>view</portlet-mode>
        </supports>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>help</portlet-mode>
        </supports>
        <supported-locale>en</supported-locale>
        <supported-locale>hr</supported-locale>
        <resource-bundle>CredentialManagerPortlet.Portlet</resource-bundle>
    </portlet>

    <portlet>
        <description xml:lang="en">File Activity Portlet</description>
	<description xml:lang="hr">Portlet Operacije s datotekama</description>
