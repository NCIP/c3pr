    <custom-portlet-mode>
        <description xml:lang="en">Pre-defined custom portlet mode CONFIGURE</description>
        <portlet-mode>CONFIGURE</portlet-mode>
    </custom-portlet-mode>
    <user-attribute>
           <description>User Name</description>
           <name>user.name</name>
       </user-attribute>
       <user-attribute>
           <description>User Full Name</description>
           <name>user.full.name</name>
       </user-attribute>
       <user-attribute>
           <description>User ID</description>
           <name>user.id</name>
       </user-attribute>
       <user-attribute>
           <description>User eMail</description>
           <name>user.email</name>
       </user-attribute>
       <user-attribute>
           <description>User Organization</description>
           <name>user.organization</name>
       </user-attribute>
       <user-attribute>
           <description>User Last Login Time</description>
           <name>user.lastlogintime</name>
       </user-attribute>
       <user-attribute>
           <description>User Timezone</description>
           <name>user.timezone</name>
       </user-attribute>
       <user-attribute>
           <description>User Locale</description>
           <name>user.locale</name>
       </user-attribute>
       <user-attribute>
           <description>User Theme</description>
           <name>user.theme</name>
       </user-attribute>

</portlet-app>
