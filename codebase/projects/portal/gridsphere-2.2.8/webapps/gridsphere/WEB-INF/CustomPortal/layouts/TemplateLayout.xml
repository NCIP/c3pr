<?xml version="1.0" encoding="UTF-8"?>

<!--

Template Layout Descriptor

This descriptor defines the template user's portal layout configuration

$Id: TemplateLayout.xml,v 1.1.1.1 2007-02-01 20:52:06 kherm Exp $
-->

<page-layout title="GridSphere Portal" keywords="gridsphere" icon="images/favicon.ico" renderkit="standard">

    <portlet-header>
        <table-layout style="header">
            <row-layout>
                <column-layout width="85%">
                    <portlet-content include="/WEB-INF/CustomPortal/layouts/html/pagehead.html"/>
                </column-layout>
                <column-layout width="15%">
                    <portlet-frame transparent="true" outer-padding="0" label="logout">
                        <portlet-class>org.gridlab.gridsphere.portlets.core.login.LogoutPortlet.1</portlet-class>
                    </portlet-frame>
                </column-layout>
            </row-layout>
        </table-layout>
    </portlet-header>

    <portlet-tabbed-pane selected="0" style="menu">

    </portlet-tabbed-pane>

    <!-- Footer components (if any) -->

    <portlet-footer>
        <table-layout style="footer">
            <row-layout>
                <column-layout width="40%"/>
                <column-layout width="60%">
                    <portlet-frame transparent="true" outer-padding="0" label="date">
                        <portlet-class>org.gridlab.gridsphere.portlets.core.date.DatePortlet.1</portlet-class>
                    </portlet-frame>
                </column-layout>
            </row-layout>
        </table-layout>
    </portlet-footer>

</page-layout>
