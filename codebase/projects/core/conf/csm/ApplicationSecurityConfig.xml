<security-config>
    <upt-context-name>
        <!-- Context Name for the UPT Application -->
        csmupt
    </upt-context-name>
    <application-list>
        <!-- For every application using the security api an entry should be made here -->
        <application>
            <context-name>
                csmupt
            </context-name>
            <authentication>
                <lockout-time>
                    10000
                </lockout-time>
                <allowed-login-time>
                    30000
                </allowed-login-time>
                <allowed-attempts>
                    10
                </allowed-attempts>
                <authentication-provider-class>
                    <!-- Fully qualified class name-->
                </authentication-provider-class>
            </authentication>
            <authorization>
                <authorization-provider-class>
                    <!-- Fully qualified class name-->
                </authorization-provider-class>
                <hibernate-config-file>
                    <!-- Fully qualified file path -->
                    @tomcat.security.dir@/@csm.context.name@.hibernate.cfg.xml
                </hibernate-config-file>
            </authorization>
        </application>
        <application>
            <context-name>
                @csm.context.name@
            </context-name>
            <authentication>
                <lockout-time>
                    10000
                </lockout-time>
                <allowed-login-time>
                    30000
                </allowed-login-time>
                <allowed-attempts>
                    10
                </allowed-attempts>
                <authentication-provider-class>
                    <!-- Fully qualified class name-->
                </authentication-provider-class>
            </authentication>
            <authorization>
                <authorization-provider-class>
                    <!-- Fully qualified class name-->
                </authorization-provider-class>
                <hibernate-config-file>
                    <!-- Fully qualified file path -->
                    @tomcat.security.dir@/@csm.context.name@.hibernate.cfg.xml
                </hibernate-config-file>
            </authorization>
        </application>
    </application-list>
</security-config>
