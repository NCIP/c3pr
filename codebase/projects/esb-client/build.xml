<project name="esb-client" default="all" basedir=".">

    <property name="project.name" value="esb-client"/>
    <property name="project.version" value="1.0"/>

    <property name="build.dir" value="${basedir}/build"/>
    <property name="src.dir" value="${basedir}/src"/>
    <property name="build.classes.dir" value="${build.dir}/classes"/>
    <property name="build.jar.dir" value="${build.dir}/jars"/>
    <property name="lib.dir" value="${basedir}/lib"/>

     <property name="test.dir" value="${basedir}/test"/>
    <property name="test.src.dir" value="${test.dir}/src"/>

    <property name="test.build.dir" value="${build.classes.dir}"/>


    <!--ext lib dir-->
    <property name="ext.dir" value="${basedir}/ext"/>
    <property name="ext.lib.dir" value="${ext.dir}/lib"/>

    <property name="project.jar.name" value="c3pr-2.0-${project.name}-${project.version}.jar" />

    <!--set the classpath-->
    <path id="javac.classpath">
        <fileset dir="${lib.dir}">
            <include name="**/*.jar"/>
        </fileset>
        <fileset dir="${ext.lib.dir}">
            <include name="**/*.jar"/>
        </fileset>
    </path>
    <path id="test.classpath">
        <path refid="javac.classpath"/>
       <pathelement location="${build.classes.dir}"/>
    </path>


    <target name="init">
        <!--make the build dirs-->
        <mkdir dir="${build.dir}"/>
        <mkdir dir="${build.classes.dir}"/>
        <mkdir dir="${build.jar.dir}"/>
    </target>


    <target name="compile" depends="init" description="Compile the project components">
        <javac srcdir="${src.dir}" destdir="${build.classes.dir}" debug="on" source="1.5" target="1.5">
            <classpath refid="javac.classpath"/>
        </javac>
    </target>

    <target name="compileTests" depends="compile">
        <javac srcdir="${test.src.dir}" destdir="${test.build.dir}" debug="true">
            <classpath refid="test.classpath"/>
        </javac>
    </target>

    <target name="jar" depends="compile,compileTests">
        <jar destfile="${build.jar.dir}/${project.jar.name}" basedir="${build.classes.dir}"/>
    </target>

    <target name="clean">
        <delete dir="${build.dir}"/>
    </target>


    <target name="all" depends="jar" description="Default target to build project"/>

</project>
 